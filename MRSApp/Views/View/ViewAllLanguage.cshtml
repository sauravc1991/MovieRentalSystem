
@model IEnumerable<MRSDataAccess.Entity.Language>

@{
    ViewBag.Title = "ViewAllLanguage";
}
<div class="table-responsive">
<table class="table table-striped">
<thead>
        <tr>
            
            <th>LanguageID</th>
            <th>LanguageName</th>
            <th>Manage</th>
                        
        </tr>
    </thead>
    <tbody>
        @foreach (MRSDataAccess.Entity.Language item in Model)
        {
            <tr>
                   
                <td>@item.LanguageID</td>
                <td>@item.LanguageName</td>
              
                <td>
                <span>
                @Html.ActionLink("Edit", "Edit", "ManageLanguage", new { lid = item.LanguageID }, null) |
                </span>
                <span>
                @Html.ActionLink("Delete", "Delete", "ManageLanguage", new { lid = item.LanguageID }, null)
                </span>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

