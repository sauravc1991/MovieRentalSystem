@model MRSDataAccess.Entity.Language

@{
    ViewBag.Title = "Index";
}

<h2>Add Languages</h2>

@using (Html.BeginForm("AddLanguage", "ManageLanguages", FormMethod.Post, new { id = "frmLogin3", name = "frmLogin3" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>LanguageData</legend>

      <div class="editor-label">
            @Html.LabelFor(model => model.LanguageID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LanguageID)
            @Html.ValidationMessageFor(model => model.LanguageID)
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.LanguageName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.LanguageName)
            @Html.ValidationMessageFor(model => model.LanguageName)
        </div>


        <p>
            <input type="submit" value="Add Language" />
            <input type="reset" value="Reset" />
        </p>
    </fieldset>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
